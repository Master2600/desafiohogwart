<div class="container">
  <h1>Registrar personaje</h1>

  <% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:error] %>
    </div>
  <% end %>

  <%= form_with(model: @character, url: pages_path) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
      <% if @character.errors[:name].any? %>
        <div class="alert alert-danger">Todos los campos son obligatorios.</div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
      <% if @character.errors[:location].any? %>
        <div class="alert alert-danger">Todos los campos son obligatorios.</div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :house %>
      <%= form.text_field :house, class: "form-control" %>
      <% if @character.errors[:house].any? %>
        <div class="alert alert-danger">Todos los campos son obligatorios.</div>
      <% end %>
    </div>

    <div>
      <%= form.submit "Registrar", class: "btn btn-primary" %>
      <%= link_to 'Volver', pages_path, class: "btn btn-link" %>
    </div>
  <% end %>
</div>






